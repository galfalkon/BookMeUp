<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/business_bookings_btnUpdate"
		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temporary: Update" />
        
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pending"/>
    
    <ListView
        android:id="@+id/business_bookings_listViewPendingBookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booked"/>
    
     <ListView
        android:id="@+id/business_bookings_listViewApprovedBookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>
