<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/business_calendar_customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FF0000"
        android:layout_marginRight="15dip"
        android:layout_marginEnd="15dip" />
    
    <com.parse.ParseImageView
        android:id="@+id/business_calendar_customer_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/business_calendar_customer_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="15dip"
        android:layout_marginRight="15dip" />

    <TextView
        android:id="@+id/business_calendar_booking_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/business_calendar_customer_name"
        android:layout_toRightOf="@id/business_calendar_customer_name"
        android:layout_toEndOf="@id/business_calendar_customer_name"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/business_calendar_booking_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_calendar_booking_date"
        android:layout_toRightOf="@id/business_calendar_customer_image"
        android:layout_toEndOf="@id/business_calendar_customer_image" />
    
    <TextView
        android:id="@+id/business_calendar_booking_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_calendar_booking_service"
        android:layout_toRightOf="@id/business_calendar_customer_image"
        android:layout_toEndOf="@id/business_calendar_customer_image" />

</RelativeLayout>