<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/customer_business_profile_dialog_title_bar"
    android:paddingLeft="15.0dip"
    android:paddingRight="15.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/customer_business_profile_dialog_title_name"
        android:textAppearance="?android:textAppearanceLarge"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="?android:listPreferredItemHeight"
        android:textColor="#888888"
        android:drawablePadding="14.0dip"
        android:layout_weight="1.0" />
    
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/customer_business_profile_dialog_favourites_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/btn_star_big_off"
        android:layout_weight="0.0" android:contentDescription="@string/favourites_icon"/>
    <!-- android:src="@android:drawable/ic_menu_preferences" -->
</LinearLayout>