<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res/com.gling.bookmeup"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/customer_calendar_activity_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        app1:pstsIndicatorColor="@android:color/holo_orange_dark" />

    <android.support.v4.view.ViewPager
        android:id="@+id/customer_calendar_activity_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customer_calendar_activity_tabs"
        tools:context="com.gling.bookmeup.customer.CustomerCalendarActivity" />

</RelativeLayout>