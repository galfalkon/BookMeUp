<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <com.parse.ParseImageView
        android:id="@+id/customer_calendar_business_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="15dip"
        android:layout_marginRight="15dip" />

    <TextView
        android:id="@+id/customer_calendar_business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dip"
        android:layout_marginRight="15dip"
        android:layout_toEndOf="@id/customer_calendar_business_image"
        android:layout_toRightOf="@id/customer_calendar_business_image" />

    <TextView
        android:id="@+id/customer_calendar_booking_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customer_calendar_business_name"
        android:layout_toEndOf="@id/customer_calendar_business_image"
        android:layout_toRightOf="@id/customer_calendar_business_image" />

    <TextView
        android:id="@+id/customer_calendar_booking_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customer_calendar_booking_date"
        android:layout_toEndOf="@id/customer_calendar_business_image"
        android:layout_toRightOf="@id/customer_calendar_business_image" />

    <TextView
        android:id="@+id/customer_calendar_booking_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customer_calendar_booking_service"
        android:layout_toEndOf="@id/customer_calendar_business_image"
        android:layout_toRightOf="@id/customer_calendar_business_image" />

</RelativeLayout>