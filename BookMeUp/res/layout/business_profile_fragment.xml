<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/business_profile_creation_edtBusinessName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/business_profile_creation_edtBusinessName"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/business_profile_creation_txtPreviewImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/business_profile_creation_txtPreviewImage"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center" />

        <com.parse.ParseImageView
            android:id="@+id/business_profile_creation_imgPreviewImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/business_profile_creation_btnImageUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_photo" />
    </LinearLayout>

    <EditText
        android:id="@+id/business_profile_creation_edtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/business_profile_creation_edtDescriptionHint"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/business_profile_creation_edtOpeningHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/business_profile_creation_edtOpeningHoursHint"
        android:inputType="text" />
    
    <ExpandableListView
        android:id="@+id/business_profile_creation_lstServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/business_profile_creation_lstServices" >
    </ExpandableListView>

    <Button
        android:id="@+id/business_profile_creation_btnCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/business_profile_creation_btnCreateProfile" />

</LinearLayout>