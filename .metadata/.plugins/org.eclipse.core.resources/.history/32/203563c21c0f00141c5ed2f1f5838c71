package com.gling.bookmeup.main;

import android.os.Bundle;
import android.support.v4.app.Fragment;
import android.util.Log;
import android.view.LayoutInflater;
import android.view.View;
import android.view.View.OnClickListener;
import android.view.ViewGroup;
import android.widget.Button;

/**
 * Represent a class that contains buttons that trigger a fragment shift.
 */
public abstract class ClickableFragment extends Fragment implements OnClickListener{
	private static final String TAG = "ClickableFragment";
	
	abstract protected int getFragmentLayoutId();
	
	@Override
	public void onClick(View v) {
		Log.i(TAG, "Button clicked!");
		FragmentsFlowManager.goToNextFragment(getActivity(), v.getId());
	}
	
	@Override
	public View onCreateView(LayoutInflater inflater, ViewGroup container,
			Bundle savedInstanceState) {
		Log.i(TAG, "onCreateView");
		
		View rootView = inflater.inflate(getFragmentLayoutId(), container, false);
		
		for (View v : rootView.getTouchables()) {
			if (v instanceof Button) {
				v.setOnClickListener(this);
			}
		}
		
		return rootView;
	}
}
